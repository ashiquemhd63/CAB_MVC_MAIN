<div class="container">
    <h1 class="text-center">Cab Details</h1>
    <div class="row">
        <div class="col-sm-6 offset sm-3">
            <form method="post">
                
                <div>
                    <label for="cabName">Cab Name</label>
                    <input type="text" name="cabName" id="cabName" class="form-control">
                </div>
                <div>
                    <label for="cabDescription">Cab Desctription</label>
                    <textarea name="cabDescription" id="cabDescription" cols="10" rows="5"
                        class="form-control"></textarea>
                </div>
                <div>
                    <label for="totalCapacity">Total Capacity</label>
                    <input type="number" name="totalCapacity" id="totalCapacity" class="form-control">
                </div>
               

                 
                <div>
                   
                    <label for="Drivername">Driver</label>
                    
                    <select class="drivername" name="drivername" id="drivername">
                    {{#each driverName}}
                    <option value={{this.dataValues.Drive_name}}:{{this.dataValues.Driver_id}} ':' + >{{this.dataValues.Drive_name}}</option>
                    {{/each}}
                  
                </select>
                  

                </div>
                
                
                
                {{!-- <div>
                    <label for="driverId">Driver Name</label>
                    <input type="number" name="driverId" id="driverId" class="form-control">
                </div> --}}
                <div class="d-grid mt-4">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>