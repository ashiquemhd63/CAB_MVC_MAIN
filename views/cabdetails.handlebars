<link rel="stylesheet" href="/static/stylecabdetails.css" type="text/css">
  <div class="container">
            <div class="header">
                <h2 >Book a city Taxi to your destination in town </h1>
            </div>
            <div class="mid-container">
            
            <form method="post" type="form">
                <label for="cabfrom" type="form-control">Pick Up</label>
                <select name="cabfrom" id="cabfrom" type="form-control" class="form-controll">
                    {{#each pickup}}
                    <option value="{{this.dataValues.from}}">{{this.dataValues.from}}</option>
                    {{/each}}
                </select>
                
                
                <br/>
                <label for="To">to</label>
                <select name="cabto" id="cabto" type="form-control">
                    {{#each data}}
                    <option value="{{this.dataValues.to}}">{{this.dataValues.to}}</option>
                    {{/each}}
                </select>
                <div class="alert-danger" id="location"></div>
                <br/>
                <div id="dateDiv">
                    <input type="date" id="date" placeholder="pick-up date" name="date">
                </div>
                <br/>
                <div id="timeDiv">
                    <input type="time" id="time" placeholder="pick-up time" name="time" >
                </div>
                <br/>
               
                <div id="searchDiv">
                    <button type="submit" id="search">Book now</button>
                </div>
            </form>   
             
            </div>
</div>

