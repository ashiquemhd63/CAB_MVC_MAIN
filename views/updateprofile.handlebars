
<link rel="stylesheet" href="/static/stylebody.css">


    <div class="container">
        <h1 class="text-center">{{heading}}</h1>
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <form method="post">
                    <div>
                        <label for="first name">First Name</label>
                        <input type="name" name="firstName" class="form-control" placeholder="First name" value="{{data.dataValues.firstName}}">
                    </div>
                    <div>
                        <label for="last name">Last Name</label>
                        <input type="name" name="lastName" class="form-control" placeholder="Last name" value="{{data.dataValues.lastName}}">
                    </div>

                    <div>
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control">
                    </div>


                    <div>
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" minlength="8" maxlength="25"
                            required>
                    </div>

                    
                    <div>
                        <label for="mobile">Mobile Number</label>
                        <input type="number" name="mobile" class="form-control">
                    </div>
                    
                    
                    



                    

                    <div class="d-grid mt-4">
                        <p class="alert-danger" id="error-messages"></p>
                        <button type="submit" class="btn btn-primary shadow" id="btn-login"
                            >Update</button>
                    </div>


                </form>
            </div>
        </div>
    </div>

